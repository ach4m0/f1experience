.menu-container
    text-align      center
    width           100%
.menu-anchor
    color           $maincolor
.menu-item
    font-family     $mainfont
    font-size       1.5em
    padding         .4em
    width           100%
.menu-item:hover
    text-shadow     0 0 .5em $maincolor
@media screen and (min-width: $bp2)
    .menu-container
        float           left
        width           35%
    .menu
        overflow        hidden
        text-align      center
    .menu-item
        float           left
        width           initial
